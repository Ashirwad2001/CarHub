<%- include ('../partials/header.ejs') %>
<div class="container">
    <h1 style="text-align: center; margin:25px auto;">Editing : <%= car.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/car/<%= car._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="car[name]" value="<%= car.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="car[price]" value="<%= car.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="car[image]" value="<%= car.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="car[description]" value="<%= car.description %>">
            </div>
            <button class="btn btn-lg btn-primary btn-block" style="margin: 25px auto">Edit</button>
            </form>
            <a href="/car">Go Back</a>
        </div>
    </div>
</div>
<%- include ('../partials/footer.ejs') %>